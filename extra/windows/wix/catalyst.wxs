<?xml version="1.0" encoding="windows-1252"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">
    <Product Name="Catalyst" Id="*" UpgradeCode="9c09a374-1135-4782-959f-2dec376a1dfa" Language="1033" Codepage="1252" Version="0.4.2" Manufacturer="Catalyst">
        <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine"/>
        <MajorUpgrade AllowSameVersionUpgrades="yes" DowngradeErrorMessage="A newer version of [ProductName] is already installed."/>
        <Icon Id="catalyst.exe" SourceFile=".\extra\windows\catalyst.ico"/>
        <WixVariable Id="WixUILicenseRtf" Value=".\extra\windows\wix\license.rtf"/>
        <Property Id="ARPPRODUCTICON" Value="catalyst.exe"/>
        <MediaTemplate EmbedCab="yes"/>
        <UIRef Id="WixUI_Minimal"/>

        <Feature Id="ProductFeature" Title="ConsoleApp" Level="1">
            <ComponentRef Id="CatalystExe"/>
            <ComponentRef Id="CatalystShortcut"/>
            <ComponentRef Id="ModifyPathEnv"/>
            <ComponentRef Id="ContextMenu"/>
        </Feature>

        <!-- Create directories -->
        <Directory Id="TARGETDIR" Name="SourceDir">
            <Directory Id="ProgramFiles64Folder">
                <Directory Id="CatalystProgramFiles" Name="Catalyst"/>
            </Directory>
            <Directory Id="ProgramMenuFolder">
                <Directory Id="CatalystProgramMenu" Name="Catalyst"/>
            </Directory>
        </Directory>

        <!-- Application binaries -->
        <DirectoryRef Id="CatalystProgramFiles">
            <Component Id="CatalystExe" Guid="*">
                <File Id="CatalystExeFile" Source=".\target\release-lto\catalyst.exe" Name="catalyst.exe" KeyPath="yes"/>
            </Component>
        </DirectoryRef>

        <DirectoryRef Id="CatalystProgramMenu">
            <!-- Application shortcut -->
            <Component Id="CatalystShortcut" Guid="7d3d3a8e-febb-4759-8eca-873676d5066a">
                <Shortcut Id="CatalystShortcutFile" Icon="catalyst.exe" Name="Catalyst" Description="Lightning-fast and Powerful Code Editor" Target="[CatalystProgramFiles]catalyst.exe"/>
                <RemoveFolder Id="CatalystProgramMenu" On="uninstall"/>
                <RegistryValue Root="HKCU" Key="Software\Microsoft\Catalyst" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
            </Component>
        </DirectoryRef>

        <DirectoryRef Id="CatalystProgramFiles">
            <!-- Add to PATH -->
            <Component Id="ModifyPathEnv" Guid="0581ccb0-5db8-4935-8b07-8f46bc2d7171" KeyPath="yes">
                <Environment Id="PathEnv" Value="[CatalystProgramFiles]" Name="PATH" Permanent="no" Part="first" Action="set" System="yes"/>
            </Component>
        </DirectoryRef>

        <DirectoryRef Id="TARGETDIR">
            <!-- Add context menu -->
            <Component Id="ContextMenu" Guid="22ad399b-1d77-416c-ae33-57e8f8511177">
                <RegistryKey Root="HKCU" Key="Software\Classes\Directory\Background\shell\Open Catalyst here\command">
                    <RegistryValue Type="string" Value="[CatalystProgramFiles]catalyst.exe &quot;%V&quot;" KeyPath="yes"/>
                </RegistryKey>
                <RegistryKey Root="HKCU" Key="Software\Classes\Directory\Background\shell\Open Catalyst here">
                    <RegistryValue Type="string" Name="Icon" Value="[CatalystProgramFiles]catalyst.exe"/>
                </RegistryKey>
            </Component>
        </DirectoryRef>
    </Product>
</Wix>
